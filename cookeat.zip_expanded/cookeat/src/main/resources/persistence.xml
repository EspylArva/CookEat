<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="my-persistence-unit" transaction-type="RESOURCE_LOCAL">
    	<class>com.horizon.cookeat.entities.Ingredient"</class>
        <class>com.horizon.cookeat.entities.Equipment"</class>
        <class>com.horizon.cookeat.entities.Allergene"</class>
        <class>com.horizon.cookeat.entities.Gallery"</class>
        <class>com.horizon.cookeat.entities.Etape"</class>
        <class>com.horizon.cookeat.entities.Recipe"</class>
        <class>com.horizon.cookeat.entities.RecipeIngredient</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
	    <properties>
	        <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
	        <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://garageisep.com:5432/cookeat" />
	        <property name="javax.persistence.jdbc.user" value="cookeat" />
	        <property name="javax.persistence.jdbc.password" value="Baptiste" />
	        <property name="hbm2ddl.auto" value="update" />
	        <property name="show_sql" value="true"/>  
	        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />        
	    </properties>
    </persistence-unit>
</persistence>